@{
    ViewData["Title"] = "About";
}
<main class="container my-5">
    <!-- Hero Section -->
    <h1 class="text-center">About Recipe Master</h1>
    <p class="lead text-center">
        Your go-to place for the best recipes online!
    </p>
    <!-- Cards -->
    <div class="row mt-4">
        <div class="col-md-6 shadow-lg justify-content-center d-flex mb-5">
            <img src="~/about.png"
                 class="img-fluid rounded"
                 alt="About Us" />
        </div>
        <div class="col-md-6">
            <h3>Our Story</h3>
            <p>
                Recipe Master was created with one goal: to bring the best recipes
                to your kitchen. Whether you're a beginner or an expert chef, you'll
                find something delicious here!
            </p>
            <h3>Why Choose Us?</h3>
            <ul>
                <li>Hand-picked recipes</li>
                <li>Easy-to-follow instructions</li>
                <li>For all people and tastes</li>
            </ul>
        </div>
    </div>
</main>
